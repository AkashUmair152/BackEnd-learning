<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Note Taking App</title>
  </head>
  <body class="bg-gray-900 text-white min-h-screen flex flex-col items-center py-10">
    <!-- Task Form -->
    <div class="w-full max-w-4xl p-6 bg-gray-800 rounded-lg shadow-lg mb-8">
      <form action="/create" method="POST" class="flex flex-col gap-6">
        <!-- Heading -->
        <h1 class="text-2xl font-bold text-center text-indigo-400">Create a Task</h1>
        <!-- Title Input -->
        <input
          type="text"
          name="title"
          placeholder="Title"
          required
          class="w-full px-4 py-2 bg-gray-700 border border-indigo-500 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-400"
        />
        <!-- Description Textarea -->
        <textarea
          name="description"
          placeholder="Task Description"
          class="w-full px-4 py-2 bg-gray-700 border border-indigo-500 rounded-md resize-none focus:outline-none focus:ring-2 focus:ring-indigo-400"
        ></textarea>
        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full py-2 bg-indigo-500 text-white font-semibold rounded-md hover:bg-indigo-600 transition duration-300"
        >
          Create a Task
        </button>
      </form>
    </div>

    <% if(files.length > 0) { %>
      <div class="w-full max-w-6xl flex flex-wrap justify-start gap-6">
        <% files.forEach(function(val){ %>
          <!-- Task Card -->
          <div class="p-4 bg-gray-800 rounded-lg shadow-md border border-indigo-500 w-64">
            <h2 class="text-lg font-semibold text-indigo-400"><%= val.title %></h2>
            <p class="mt-2 text-gray-300"><%= val.description %></p>
            <div class="flex justify-end mt-4">
              <!-- Delete Button -->
              <form action="/delete/<%= val.title %>" method="POST" style="display: inline;">
                <button type="submit" class="px-3 py-1 bg-red-500 text-white rounded-md hover:bg-red-600 transition duration-300">
                  Delete
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <h3 class="text-2xl font-bold text-center text-indigo-400">No Tasks Yet</h3>
    <% } %>
  </body>
</html>