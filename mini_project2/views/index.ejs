<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <!-- Home Page Container -->
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md text-center space-y-6">
      <!-- Welcome Message -->
      <h1 class="text-3xl font-bold text-gray-800">Welcome to Our Platform</h1>
      <p class="text-gray-600 text-sm">
        We're excited to have you here! Please register to get started.
      </p>

      <!-- Register Button -->
      <a
        href="/register"
        class="inline-block w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >
        Register Now
      </a>
      <a
        href="/login"
        class="inline-block w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >
        login
      </a>
    </div>
  </body>
</html>